  "version": "0.2.0",
  "compounds": [
    {
      "name": "All Projects",
      "configurations": [
        ".NET Core Launch (Identity)",
        // ".NET Core Launch (Client)",
        ".NET Core Launch (Api)",
        ".NET Core Launch (MvcClient)"
      ],
      "stopAll": true
    }
  ],
  "configurations": [
    {
      "name": ".NET Core Launch (Identity)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "Build: Identity.csproj",
      "program": "${workspaceFolder}/src/IdentityServer/bin/Debug/net7.0/IdentityServer.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/IdentityServer",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    },
    {
      "name": ".NET Core Launch (Client)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "Build: Client.csproj",
      "program": "${workspaceFolder}/src/Client/bin/Debug/net7.0/Client.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/Client",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    },
    {
      "name": ".NET Core Launch (Api)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "Build: Api.csproj",
      "program": "${workspaceFolder}/src/Api/bin/Debug/net7.0/Api.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/Api",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    },
    {
      "name": ".NET Core Launch (MvcClient)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "Build: MvcClient.csproj",
      "program": "${workspaceFolder}/src/MvcClient/bin/Debug/net7.0/MvcClient.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/MvcClient",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    },
    {
      "name": ".NET Core Attach",
      "type": "coreclr",
      "request": "attach"
    }
  ]
}
